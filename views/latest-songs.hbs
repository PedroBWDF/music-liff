{{>navbar}}

<section class="section">
  <div class="container">
    <h2 class="title is-2">Latest Songs</h2>
    <hr class="has-background-primary is-bold" style="width: 25%;"/>
    <div class="columns is-multiline is-mobile">
      {{#each songs}}
      <div class="column is-12-mobile is-4-tablet is-3-desktop">
        <div class="card">
          <div class="card-image">
            <figure class="image is-3by2">
              <a href="/songs/{{this.id}}">
                <img src="{{this.image}}" alt="{{this.title}}" style="object-fit: cover;" />
              </a>
            </figure>
          </div>
          <div class="card-content">
            <div class="media-content">
              <p class="title is-5 mb-2">
                <a href="/songs/{{this.id}}">{{this.title}}</a>
              </p>
              <p class="subtitle is-6 mb-2">
                {{this.artist}}<br />
                <span>{{this.album}} Â  #{{this.releaseYear}}</span>
              </p>
              <div class="tags">
                <span class="tag is-danger is-light">{{this.Genre.name}}</span>
              </div>
              <div class="mt-2">
                <p class="has-text-weight-bold has-text-danger">
                  {{this.createdAt}}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>